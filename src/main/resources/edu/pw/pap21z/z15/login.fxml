<AnchorPane prefHeight="531.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.pw.pap21z.z15.LoginController">
    <children>
        <ImageView fitHeight="600.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@warehouse-background.jpg" />
            </image>
        </ImageView>
        <VBox alignment="CENTER" prefHeight="133.0" prefWidth="532.0" spacing="10.0">
            <Label prefHeight="50.0" prefWidth="487.0" text="Warehouse management app" textAlignment="CENTER" textFill="WHITE">
                <font>
                    <Font name="Book Antiqua" size="36.0" />
                </font>
                <padding>
                    <Insets bottom="10.0" left="5.0" />
                </padding>
            </Label>
            <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefHeight="26.0" prefWidth="506.0" text="Login to the existing account or create new" textFill="WHITE">
                <padding>
                    <Insets bottom="10.0" />
                </padding>
                <font>
                    <Font name="Arial" size="14.0" />
                </font>
            </Label>
        </VBox>
        <VBox layoutY="111.0" prefHeight="230.0" prefWidth="640.0" spacing="30.0">
            <children>
                <TextField fx:id="username" prefHeight="27.0" prefWidth="160.0" promptText="login" />
                <PasswordField fx:id="password" prefHeight="27.0" prefWidth="160.0" promptText="password" />
                <Button alignment="CENTER" blendMode="SOFT_LIGHT" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#logIn" prefHeight="25.0" prefWidth="329.0" text="Log In">
                    <VBox.margin>
                        <Insets left="50.0" right="50.0" />
                    </VBox.margin>
                </Button>
                <Button blendMode="SOFT_LIGHT" mnemonicParsing="false" onAction="#create" text="Create an account">
                    <VBox.margin>
                        <Insets left="40.0" />
                    </VBox.margin>
                </Button>
            </children>
            <padding>
                <Insets left="280.0" right="170.0" top="40.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
